{
  "compilerOptions": {
    "lib": ["dom", "es2016"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": false
}
