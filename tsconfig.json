{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "files": [
    "src/app/app.module.ts",
    "src/main.aot.ts"
  ],
  "exclude": [
    "src/main.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./src/ngfactory",
    "entryModule": "./src/app/app.module#AppModule"
  }
}
