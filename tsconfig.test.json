{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/app/specs.js"
  ],
  "exclude": [
    "src/main.aot.ts",
    "src/main.ts",
    "node_modules/**/*.d.ts",
    "node_modules/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./src/ngfactory",
    "entryModule": "./src/app/app.module#AppModule"
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}
